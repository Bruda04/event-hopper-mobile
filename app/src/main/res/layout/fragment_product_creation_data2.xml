<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".fragments.solutions.services.ServiceCreationData2Fragment"
	android:background="@color/material_dynamic_neutral95">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="16dp">

		<!-- Price Section -->
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/service_price"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/price">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:textAppearance="@style/DarkLargerText"

				android:layout_height="wrap_content"
				android:inputType="numberDecimal" />
		</com.google.android.material.textfield.TextInputLayout>

		<!-- Discount Section -->
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/service_discount"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/discount">

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAppearance="@style/DarkLargerText"

				android:inputType="numberDecimal" />
		</com.google.android.material.textfield.TextInputLayout>

		<!-- Spacer -->
		<Space
			android:layout_width="match_parent"
			android:layout_height="15dp" />


		<!-- Spacer -->
		<Space
			android:layout_width="match_parent"
			android:layout_height="20dp" />

		<!-- Upload Images -->
		<com.google.android.material.button.MaterialButton
			android:id="@+id/upload_images_btn"
			style="@style/DarkButton"
			android:layout_width="305dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginBottom="22dp"
			android:padding="5dp"
			android:text="@string/upload_pictures_required"
			/>

		<TextView
			android:id="@+id/imagesError"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/md_theme_error"
			android:visibility="gone"
			android:text="Upload one image to be the cover."
			android:textSize="12sp" />

		<!-- RecyclerView for image previews -->
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/image_preview_recycler_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dp"
			android:layout_marginTop="8dp"
			android:orientation="horizontal"
			tools:listitem="@layout/item_image_preview" />

		<!-- Spacer -->
		<Space
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1" />

		<!-- Buttons Row -->
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom">

			<!-- Back Button -->
			<Button
				style="@style/DarkButton"
				android:id="@+id/back_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:paddingHorizontal="16dp"
				android:paddingVertical="8dp"
				android:text="@string/back"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<!-- Next Button -->
			<Button
				style="@style/DarkButton"
				android:id="@+id/next_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"

				android:layout_marginStart="8dp"
				android:paddingHorizontal="16dp"
				android:paddingVertical="8dp"
				android:text="@string/create"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>


	</LinearLayout>

</FrameLayout>
