<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment3"
    android:background="@color/background_beige">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Item 1: Edit Profile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ListItemEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/editProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/edit_profile"
                    android:textAppearance="@style/DarkLargerText"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_forward"
                    app:tint="@color/darker_blue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Item 2: View my products -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ListItemMyProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ListItemEditProfile"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/myProducts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_products"
                    android:textAppearance="@style/DarkLargerText"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_forward"
                    app:tint="@color/darker_blue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Item 2: View my services -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ListItemMyServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ListItemMyProducts"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/myServices"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_services"
                    android:textAppearance="@style/DarkLargerText"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_forward"
                    app:tint="@color/darker_blue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


























    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>