<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.ProfileFragment"
    android:background="@color/background_beige">

    <!-- ScrollView to make the content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ConstraintLayout for the main layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/profile_pic_temp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="16dp"/>

            <!-- Company Information -->
            <LinearLayout
                android:id="@+id/company_information"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/CompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JetBrains"
                android:textAppearance="@style/DarkLargerText" />

            <TextView
                android:id="@+id/companyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234 Main Street"
                android:textAppearance="@style/DarkRegularText" />

            <TextView
                android:id="@+id/companyCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cityville"
                android:textAppearance="@style/DarkRegularText" />

            <TextView
                android:id="@+id/companyEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="johndoe@email.com"
                android:textAppearance="@style/DarkRegularText" />
        </LinearLayout>

        <!-- User Information (Name, Address, etc.) -->
        <LinearLayout
            android:id="@+id/user_information"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/company_information"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textAppearance="@style/DarkLargerText" />

        <TextView
            android:id="@+id/userAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234 Main Street"
            android:textAppearance="@style/DarkRegularText" />

        <TextView
            android:id="@+id/userCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cityville"
            android:textAppearance="@style/DarkRegularText" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="johndoe@email.com"
            android:textAppearance="@style/DarkRegularText" />
    </LinearLayout>

    <!-- Item 1: Edit Profile -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ListItemEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/user_information"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/editProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit_profile"
                android:textAppearance="@style/DarkLargerText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward"
                app:tint="@color/darker_blue" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Item 2: View my products -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ListItemMyProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ListItemEditProfile"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/myProducts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_products"
                android:textAppearance="@style/DarkLargerText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward"
                app:tint="@color/darker_blue" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Item 3: View my services -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ListItemMyServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ListItemMyProducts"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/myServices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_services"
                android:textAppearance="@style/DarkLargerText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward"
                app:tint="@color/darker_blue" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ListItemMyPrices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ListItemMyServices"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/myPrices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My prices"
                android:textAppearance="@style/DarkLargerText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward"
                app:tint="@color/darker_blue" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <!-- Item 4: View categories -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ListItemCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ListItemMyPrices"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/categories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manage categories"
                android:textAppearance="@style/DarkLargerText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward"
                app:tint="@color/darker_blue" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Item 4: View categories -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ListItemLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ListItemMyPrices"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Log out"
                android:textAppearance="@style/DarkLargerText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward"
                app:tint="@color/darker_blue" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ListItemUpgradeProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/ListItemLogOut"
                tools:layout_editor_absoluteX="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/upgradeProfile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upgrade profile"
                        android:textAppearance="@style/DarkLargerText" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_forward"
                        app:tint="@color/darker_blue" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    </FrameLayout>
