<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="16dp"
	app:cardCornerRadius="16dp"
	app:cardElevation="6dp"
	android:padding="16dp"
	app:cardBackgroundColor="@android:color/white">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<!-- Remove button aligned to top-end -->

		<!-- Centered content with padding -->
		<ImageButton
			android:id="@+id/agenda_remove"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:src="@android:drawable/ic_delete"
			app:tint="@color/md_theme_error" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/agenda_remove"
			android:layout_toStartOf="@id/agenda_remove"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:paddingStart="24dp"
			android:paddingEnd="24dp"
			android:layout_margin="10dp">

			<TextView
				android:id="@+id/agenda_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:text="Name"
				android:textAppearance="@style/DarkLargerText"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/agenda_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:text="Description"
				android:textAppearance="@style/DarkRegularText" />

			<TextView
				android:id="@+id/agenda_location"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:text="Location"
				android:textAppearance="@style/DarkRegularText" />

			<TextView
				android:id="@+id/agenda_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Time"
				android:textAppearance="@style/DarkRegularText" />
		</LinearLayout>
	</RelativeLayout>
</androidx.cardview.widget.CardView>
