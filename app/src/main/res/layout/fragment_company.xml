<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.CompanyFragment"
    android:background="@color/background_beige">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:layout_gravity="center"
            >

            <!-- Image Slider -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/provider_company_image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <!-- Manage Images Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ListItemManageImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/light_blue"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/manageImages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_photos"
                        android:textAppearance="@style/DarkLargerText"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Company Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/company_information_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:id="@+id/company_information"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Title and Edit Icon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/CompanyInformationTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/company"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:textAppearance="@style/DarkLargerText" />

                        <ImageView
                            android:id="@+id/editCompanyIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/edit"
                            android:layout_marginStart="8dp"
                            app:tint="@color/theme_blue" />
                    </LinearLayout>

                    <!-- Company Information Details -->
                    <TextView
                        android:id="@+id/CompanyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textAppearance="@style/DarkLargerText"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/companyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textAppearance="@style/DarkLargerText"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/companyEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textAppearance="@style/DarkLargerText"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/companyDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textAppearance="@style/DarkLargerText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
