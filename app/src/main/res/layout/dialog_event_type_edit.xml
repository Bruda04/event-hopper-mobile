<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="16dp">

	<LinearLayout
		android:id="@+id/dialog_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<!-- Description Input -->
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/event_type_description_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Description"
			app:errorEnabled="true">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/event_type_description_field"
				android:layout_width="match_parent"
				android:layout_height="120dp"
				android:textAppearance="@style/DarkLargerText"
				android:inputType="textMultiLine"
				android:minLines="3"
				android:maxLines="5" />
		</com.google.android.material.textfield.TextInputLayout>

		<!-- Selected Categories -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Selected Categories"
			android:textAppearance="@style/DarkLargerText"
			android:layout_marginTop="24dp" />

		<LinearLayout
			android:id="@+id/selected_categories_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="8dp" />

		<!-- Available Categories -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Available Categories"
			android:textAppearance="@style/DarkLargerText"
			android:layout_marginTop="24dp" />

		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/menu_category"
			style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			android:fontFamily="@font/poppins_regular"

			android:hint="@string/category">

			<AutoCompleteTextView
				android:id="@+id/category_dropdown"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/poppins_regular"
				android:inputType="none" />
		</com.google.android.material.textfield.TextInputLayout>


	</LinearLayout>
</ScrollView>
