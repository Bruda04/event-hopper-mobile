<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/uploadOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_new_profile_picture"
        android:textSize="18sp"
        android:textColor="@color/theme_blue"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="8dp" />

    <TextView
        android:id="@+id/removeOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove_profile_picture"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/md_theme_errorContainer_mediumContrast"
        android:gravity="center"
        android:padding="8dp" />
</LinearLayout>
