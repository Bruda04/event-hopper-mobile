<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/theme_blue"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/WhiteHeaderText"
        android:text="@string/filter_by"
        android:layout_marginTop="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/checkbox_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <CheckBox
            android:id="@+id/checkbox_products"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/checkbox_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/checkbox_services"
            android:textAppearance="@style/WhiteRegularText"
            android:textSize="14sp"
            android:text="@string/products"/>

        <CheckBox
            android:id="@+id/checkbox_services"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/checkbox_container"
            app:layout_constraintStart_toEndOf="@id/checkbox_products"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:textAppearance="@style/WhiteRegularText"
            android:text="@string/services"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/location_menu"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/choose_location">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textAppearance="@style/WhiteRegularText"
            android:background="@color/md_theme_secondaryContainer"
            app:boxStrokeColor="@color/white"
            app:simpleItems="@array/location_dummy" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/category_menu"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/choose_category">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textAppearance="@style/WhiteRegularText"
            android:background="@color/md_theme_secondaryContainer"
            app:boxStrokeColor="@color/white"
            app:simpleItems="@array/category_dummy" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/price_range_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        android:layout_marginHorizontal="8dp"
        app:values="@array/solution_filter_price"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/WhiteHeaderText"
        android:text="@string/sort_by" />

    <RadioGroup
        android:id="@+id/sort_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/sort_solutions_by_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:text="@string/price" />
        <RadioButton
            android:id="@+id/sort_solutions_by_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:text="@string/name" />

    </RadioGroup>

    <Button
        android:id="@+id/apply_filters_button"
        style="@style/DarkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apply"
        android:layout_gravity="end"
        android:layout_marginTop="16dp" />
</LinearLayout>
