<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.home.HomeEventsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_dynamic_neutral95">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activities.HomeActivity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:text="@string/top_events_header1"
                android:textColor="@color/md_theme_secondaryFixedDim_highContrast"

                android:textSize="30sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_events_header2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/ic_launcher_background"
                android:fontFamily="@font/poppins_regular"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.03" />


            <com.github.islamkhsh.CardSliderViewPager
                android:id="@+id/viewPagerEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:auto_slide_time="3"
                app:cardSlider_indicator="@id/indicator"
                app:cardSlider_otherPagesWidth="24dp"
                app:cardSlider_pageMargin="12dp"
                app:cardSlider_smallAlphaFactor="0.5"
                app:cardSlider_smallScaleFactor="0.9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                />

            <com.github.islamkhsh.CardSliderIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                app:indicatorsToShow="5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewPagerEvents"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/all_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/indicator">

                <TextView
                    android:id="@+id/all_events_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/all_events_title"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/all_events" />

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/all_events_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/search_button"
                    >

                    <com.google.android.material.search.SearchBar
                        android:id="@+id/search_bar_events"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/md_theme_tertiaryFixed"
                        android:hint="@string/searchbar_hint"
                        app:layout_constraintEnd_toStartOf="@id/search_button"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.search.SearchView
                        android:id="@+id/search_view_events"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/searchbar_hint"
                        app:layout_anchor="@id/search_bar_events"
                        android:backgroundTint="@color/md_theme_tertiaryFixed"
                        >
                    </com.google.android.material.search.SearchView>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>


                <Button
                    android:id="@+id/search_button"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="10dp"
                    app:icon="@drawable/search"
                    app:layout_constraintEnd_toStartOf="@id/filterButton"
                    app:layout_constraintStart_toEndOf="@id/search"
                    app:layout_constraintTop_toBottomOf="@id/all_events_title" />

                <Button
                    android:id="@+id/filterButton"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/filterButton"
                    app:icon="@drawable/icons8_slider_96"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.938"
                    app:layout_constraintStart_toEndOf="@id/search_button"
                    app:layout_constraintTop_toBottomOf="@id/all_events_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_allevents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"

                    app:layout_constraintTop_toBottomOf="@id/filterButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <Button
                    android:id="@+id/back_arrow_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/backArrowButton"
                    android:text=""
                    app:icon="@drawable/back_arrow"
                    app:iconGravity="textStart"
                    app:layout_constraintEnd_toStartOf="@id/pager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recyclerView_allevents" />

                <TextView
                    android:id="@+id/pager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/pageLabel"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toStartOf="@id/forward_arrow_button"
                    app:layout_constraintStart_toEndOf="@id/back_arrow_button"
                    app:layout_constraintTop_toBottomOf="@id/recyclerView_allevents" />

                <Button
                    android:id="@+id/forward_arrow_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/forwardArrowButton"
                    android:text=""
                    app:icon="@drawable/forward_arrow"
                    app:iconGravity="textEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pager"
                    app:layout_constraintTop_toBottomOf="@id/recyclerView_allevents" />



            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout >
    </ScrollView>


</FrameLayout>