<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="WhiteRegularText">
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textSize">12sp</item>
</style>

<style name="DarkRegularText">
    <item name="android:textColor">@color/text_dark_blue</item>
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textSize">12sp</item>
</style>

<style name="DarkLargerText">
    <item name="android:textColor">@color/text_dark_blue</item>
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textSize">16sp</item>
</style>

<style name="DarkBoldText">
    <item name="android:textColor">@color/text_dark_blue</item>
    <item name="android:fontFamily">@font/poppins_bold</item>
    <item name="android:textSize">12sp</item>
</style>

<style name="SecondaryBoldText">
    <item name="android:textColor">@color/md_theme_secondary</item>
    <item name="android:fontFamily">@font/poppins_bold</item>
    <item name="android:textSize">12sp</item>
</style>

<style name="SecondaryLargerBoldText">
    <item name="android:textColor">@color/md_theme_secondary</item>
    <item name="android:fontFamily">@font/poppins_bold</item>
    <item name="android:textSize">16sp</item>
</style>

<style name="WhiteHeaderText">
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textSize">24sp</item>
</style>

<style name="DarkHeaderText">
    <item name="android:textColor">@color/text_dark_blue</item>
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textSize">24sp</item>
</style>

<style name="WhiteLargerText">
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textSize">16sp</item>
</style>

<style name="DarkButton">
    <item name="android:textAppearance">@style/WhiteRegularText</item>
    <item name="android:backgroundTint">@color/darker_blue</item>
    <item name="android:textColor">@color/white</item>
</style>

<style name="RedButton">
    <item name="android:textAppearance">@style/WhiteRegularText</item>
    <item name="android:backgroundTint">@color/md_theme_error</item>
    <item name="android:textColor">@color/white</item>
</style>

<style name="BlueBackgroundInputField">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@style/WhiteRegularText</item>
</style>

<style name="ErrorLargerBoldText">
    <item name="android:textColor">@color/md_theme_error</item>
    <item name="android:fontFamily">@font/poppins_bold</item>
    <item name="android:textSize">16sp</item>
</style>


</resources>